<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/huellita2"
    android:padding="20dp"
    android:layout_height="match_parent"
    tools:context="com.example.wendy.proyectostudyjam.Sujetar">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="50dp"
        android:layout_height="wrap_content">
        <Button
            android:onClick="atras"
            android:background="@drawable/flechaatras"
            android:layout_width="30dp"
            android:layout_height="30dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#6a4222"
        android:background="@drawable/bordetitulos"
        android:text="SUJETAR CORRECTAMENTE UN GATO"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ImageView
        android:paddingTop="10dp"
        android:onClick="youtubeSujetar"
        android:src="@drawable/sujetar"
        android:layout_width="220dp"
        android:layout_height="120dp"
        android:layout_gravity="center"/>

    <ScrollView
        android:layout_marginTop="5dp"
        android:background="@drawable/bordetexxto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sujetar"
                android:textColor="#6a4222"
                android:textStyle="italic" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>
