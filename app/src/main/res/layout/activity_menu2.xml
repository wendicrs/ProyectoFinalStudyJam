<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="15dp"
    android:gravity="center"
    android:background="@drawable/huellita2"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.wendy.proyectostudyjam.Menu2Activity">


    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/manual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bordebotones"
            android:text="Manual primeros auxilios"
            android:textColor="#6a4222"
            android:textStyle="bold" />

        <Button
            android:onClick="veterinaria"
            android:id="@+id/veterinarias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/bordebotones"
            android:text="veterinaria salud animal"
            android:textColor="#6a4222"
            android:textStyle="bold" />

        <Button
            android:onClick="sos"
            android:id="@+id/centrodeayuda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/bordebotones"
            android:text="Centro de ayuda sos"
            android:textColor="#6a4222"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:onClick="cachorro"
            android:src="@drawable/cachorro"
            android:layout_weight="1"
            android:layout_width="150dp"
            android:layout_height="150dp" />
        <ImageView
            android:onClick="gatito"
            android:layout_weight="1"
            android:src="@drawable/gatito"
            android:layout_width="150dp"
            android:layout_height="150dp" />

    </LinearLayout>





</LinearLayout>
