<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/huellita2"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context="com.example.wendy.proyectostudyjam.Convulsiones_Activity">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="50dp"
        android:layout_height="wrap_content">
        <Button
            android:onClick="atras"
            android:background="@drawable/flechaatras"
            android:layout_width="30dp"
            android:layout_height="30dp" />
    </LinearLayout>

    <TextView
        android:background="@drawable/bordetitulos"
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#6a4222"
        android:text="CONVULSIONES"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_marginTop="5dp"
        android:background="@drawable/bordetexxto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/convulsiones"
                android:textColor="#6a4222"
                android:textStyle="italic" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
