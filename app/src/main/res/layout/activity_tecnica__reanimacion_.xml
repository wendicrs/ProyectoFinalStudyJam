<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_height="match_parent"
    android:background="@drawable/huellita2"
    tools:context="com.example.wendy.proyectostudyjam.Tecnica_Reanimacion_Activity">

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/flechaatras"
            android:onClick="atras" />
    </LinearLayout>


    <TextView
        android:background="@drawable/bordetitulos"
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#6a4222"
        android:text="TECNICA REANIMACION PULMONAR EN MASCOTAS"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        android:id="@+id/ivreanimacion"
        android:layout_width="180dp"
        android:layout_height="140dp"
        android:layout_gravity="center"
        android:onClick="youtubeTecnica"
        android:background="@drawable/reanimacion" />

    <ScrollView
        android:layout_marginTop="10dp"
        android:background="@drawable/bordetexxto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/evaluar"
                android:textColor="#6a4222"
                android:textStyle="italic" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>
