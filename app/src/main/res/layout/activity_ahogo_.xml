<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/huellita2"
    android:padding="20dp"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.wendy.proyectostudyjam.Ahogo_Activity">


    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/flechaatras"
            android:onClick="atras" />
    </LinearLayout>


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bordetitulos"
        android:gravity="center"
        android:padding="10dp"
        android:text="AHOGO"
        android:textColor="#6a4222"
        android:textSize="20dp"
        android:textStyle="bold" />
    <ImageView
        android:onClick="ahogoyoutube"
        android:layout_gravity="center"
        android:src="@drawable/ahogo"
        android:layout_width="171dp"
        android:layout_height="126dp" />

    <ScrollView
        android:background="@drawable/bordetexxto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView

                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/ahogo"
                android:textColor="#6a4222"
                android:textStyle="italic" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
